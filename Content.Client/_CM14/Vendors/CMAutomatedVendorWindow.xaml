<controls:CMAutomatedVendorWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._CM14.Vendors"
    xmlns:customControls="clr-namespace:Content.Client.Administration.UI.CustomControls"
    MinSize="500 700">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label Text="Search" HorizontalExpand="True" Align="Left" />
            <LineEdit Name="Search" Access="Public" HorizontalExpand="True" />
        </BoxContainer>
        <customControls:HSeparator Color="#4972A1" />
        <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
            <BoxContainer Orientation="Vertical" Name="Sections" Access="Public" />
        </ScrollContainer>
    </BoxContainer>
</controls:CMAutomatedVendorWindow>
